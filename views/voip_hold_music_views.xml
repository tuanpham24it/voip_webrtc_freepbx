<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Hold Music Tree View -->
        <record id="voip_hold_music_view_tree" model="ir.ui.view">
            <field name="name">voip.hold.music.tree</field>
            <field name="model">voip.hold.music</field>
            <field name="arch" type="xml">
                <list string="Hold Music" decoration-info="not active" decoration-success="is_default">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="server_id"/>
                    <field name="format"/>
                    <field name="quality"/>
                    <field name="duration"/>
                    <field name="file_size" widget="integer"/>
                    <field name="usage_count"/>
                    <field name="last_used"/>
                    <field name="is_default"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Hold Music Form View -->
        <record id="voip_hold_music_view_form" model="ir.ui.view">
            <field name="name">voip.hold.music.form</field>
            <field name="model">voip.hold.music</field>
            <field name="arch" type="xml">
                <form string="Hold Music">
                    <header>
                        <button name="action_set_default" string="Set as Default" type="object" 
                                class="btn-primary" invisible="is_default"/>
                        <button name="action_play_preview" string="Preview" type="object" 
                                class="btn-secondary" invisible="not music_file"/>
                        <button name="action_test_music" string="Test Music" type="object" 
                                class="btn-info" invisible="not music_file"/>
                        <button name="action_replace_music" string="Replace Music" type="object" 
                                class="btn-warning" invisible="not music_file"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_play_preview" type="object" class="oe_stat_button" icon="fa-music" 
                                    invisible="not music_file">
                                <field name="usage_count" widget="statinfo" string="Usage"/>
                            </button>
                            <button name="action_test_music" type="object" class="oe_stat_button" icon="fa-play" 
                                    invisible="not music_file">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Test</span>
                                    <span class="o_stat_text">Music</span>
                                </div>
                            </button>
                            <button name="action_replace_music" type="object" class="oe_stat_button" icon="fa-upload" 
                                    invisible="not music_file">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Replace</span>
                                    <span class="o_stat_text">Music</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Music Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="server_id"/>
                                <field name="description"/>
                                <field name="tags"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="format"/>
                                <field name="quality"/>
                                <field name="duration"/>
                                <field name="file_size" readonly="1"/>
                                <field name="is_default"/>
                            </group>
                        </group>
                        
                        <group string="Audio Settings">
                            <group>
                                <field name="volume"/>
                                <field name="loop"/>
                            </group>
                            <group>
                                <field name="fade_in"/>
                                <field name="fade_out"/>
                            </group>
                        </group>
                        
                        <group string="Music File" invisible="not music_file">
                            <field name="music_file" widget="binary" filename="music_filename" readonly="1"/>
                            <field name="music_filename" invisible="1"/>
                        </group>
                        
                        <group string="Upload New Music File" invisible="music_file">
                            <field name="music_file" widget="binary" filename="music_filename"/>
                            <field name="music_filename" invisible="1"/>
                        </group>
                        
                        <group string="Statistics" invisible="not id">
                            <group>
                                <field name="usage_count" readonly="1"/>
                                <field name="last_used" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Hold Music Search View -->
        <record id="voip_hold_music_view_search" model="ir.ui.view">
            <field name="name">voip.hold.music.search</field>
            <field name="model">voip.hold.music</field>
            <field name="arch" type="xml">
                <search string="Hold Music">
                    <field name="name"/>
                    <field name="server_id"/>
                    <field name="tags"/>
                    <field name="description"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Default Music" name="default" domain="[('is_default', '=', True)]"/>
                    <filter string="Most Used" name="most_used" domain="[('usage_count', '>', 0)]" context="{'order_by': 'usage_count desc'}"/>
                    
                    <separator/>
                    <filter string="MP3" name="mp3" domain="[('format', '=', 'mp3')]"/>
                    <filter string="WAV" name="wav" domain="[('format', '=', 'wav')]"/>
                    <filter string="OGG" name="ogg" domain="[('format', '=', 'ogg')]"/>
                    
                    <separator/>
                    <filter string="Low Quality" name="low_quality" domain="[('quality', '=', 'low')]"/>
                    <filter string="Medium Quality" name="medium_quality" domain="[('quality', '=', 'medium')]"/>
                    <filter string="High Quality" name="high_quality" domain="[('quality', '=', 'high')]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Server" name="group_server" context="{'group_by': 'server_id'}"/>
                        <filter string="Format" name="group_format" context="{'group_by': 'format'}"/>
                        <filter string="Quality" name="group_quality" context="{'group_by': 'quality'}"/>
                        <filter string="Tags" name="group_tags" context="{'group_by': 'tags'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Hold Music Kanban View -->
        <record id="voip_hold_music_view_kanban" model="ir.ui.view">
            <field name="name">voip.hold.music.kanban</field>
            <field name="model">voip.hold.music</field>
            <field name="arch" type="xml">
                <kanban string="Hold Music" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="server_id"/>
                    <field name="format"/>
                    <field name="quality"/>
                    <field name="duration"/>
                    <field name="usage_count"/>
                    <field name="is_default"/>
                    <field name="active"/>
                    <field name="music_file"/>
                    <field name="music_filename"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="server_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_details">
                                            <div class="o_kanban_record_detail">
                                                <i class="fa fa-music" title="Format"/> <field name="format"/>
                                            </div>
                                            <div class="o_kanban_record_detail">
                                                <i class="fa fa-star" title="Quality"/> <field name="quality"/>
                                            </div>
                                            <div class="o_kanban_record_detail" t-if="record.duration.value">
                                                <i class="fa fa-clock-o" title="Duration"/> <field name="duration"/>s
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="badge badge-info" t-if="record.is_default.value">Default</span>
                                            <span class="badge badge-success" t-if="record.usage_count.value > 0">
                                                <field name="usage_count"/> uses
                                            </span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <button name="action_play_preview" type="object" class="btn btn-sm btn-secondary" 
                                                    invisible="not music_file">
                                                <i class="fa fa-play" title="Preview"/>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Hold Music Action -->
        <record id="voip_hold_music_action" model="ir.actions.act_window">
            <field name="name">Hold Music</field>
            <field name="res_model">voip.hold.music</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Upload your first hold music file!
                </p>
                <p>
                    Hold music plays for customers while they wait on hold.
                    Upload audio files in MP3, WAV, or OGG format.
                </p>
            </field>
        </record>

        <!-- Hold Music Menu Item -->
        <menuitem id="voip_hold_music_menu"
                  name="Hold Music"
                  parent="voip_webrtc_freepbx.menu_voip_root"
                  action="voip_hold_music_action"
                  sequence="30"/>

    </data>
</odoo>
