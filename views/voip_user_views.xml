<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- VoIP User Form View -->
        <record id="view_voip_user_form" model="ir.ui.view">
            <field name="name">voip.user.form</field>
            <field name="model">voip.user</field>
            <field name="arch" type="xml">
                <form string="VoIP User">
                    <header>
                        <field name="status" widget="statusbar" statusbar_visible="available,away,busy,offline"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_calls" type="object" class="oe_stat_button" icon="fa-phone">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="incoming_calls_count"/>/<field name="outgoing_calls_count"/>
                                    </span>
                                    <span class="o_stat_text">In/Out Calls</span>
                                </div>
                            </button>
                            <button name="action_view_calls" type="object" class="oe_stat_button" icon="fa-clock-o">
                                <field name="total_call_duration" widget="statinfo" string="Hours"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                        <group>
                            <group name="user_info" string="User Information">
                                <field name="user_id"/>
                                <field name="server_id"/>
                                <field name="active"/>
                            </group>
                            <group name="sip_config" string="SIP Configuration">
                                <field name="sip_username"/>
                                <field name="sip_password" password="True"/>
                                <field name="display_name"/>
                            </group>
                        </group>
                        <group>
                            <group name="preferences" string="Preferences">
                                <field name="auto_answer"/>
                                <field name="ring_tone"/>
                                <field name="enable_recording"/>
                            </group>
                            <group name="stats" string="Statistics">
                                <field name="last_login" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group name="recording_settings" string="Recording Settings">
                                <field name="auto_start_recording"/>
                                <field name="can_control_recording"/>
                                <field name="recording_quality"/>
                                <field name="recording_format"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Additional notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- VoIP User List View -->
        <record id="view_voip_user_tree" model="ir.ui.view">
            <field name="name">voip.user.tree</field>
            <field name="model">voip.user</field>
            <field name="arch" type="xml">
                <list string="VoIP Users">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="server_id"/>
                    <field name="sip_username"/>
                    <field name="incoming_calls_count"/>
                    <field name="outgoing_calls_count"/>
                    <field name="last_login"/>
                    <field name="active"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <!-- VoIP User Search View -->
        <record id="view_voip_user_search" model="ir.ui.view">
            <field name="name">voip.user.search</field>
            <field name="model">voip.user</field>
            <field name="arch" type="xml">
                <search string="VoIP Users">
                    <field name="user_id"/>
                    <field name="sip_username"/>
                    <field name="server_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Auto Answer" name="auto_answer" domain="[('auto_answer', '=', True)]"/>
                    <filter string="Recording Enabled" name="recording_enabled" domain="[('enable_recording', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Server" name="server" context="{'group_by': 'server_id'}"/>
                        <filter string="User" name="user" context="{'group_by': 'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- VoIP User Action -->
        <record id="action_voip_user" model="ir.actions.act_window">
            <field name="name">VoIP Users</field>
            <field name="res_model">voip.user</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first VoIP User
                </p>
                <p>
                    Configure VoIP settings for Odoo users to enable calling.
                </p>
            </field>
        </record>

    </data>
</odoo>
